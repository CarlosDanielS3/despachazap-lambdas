{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "outDir": "./dist/nodejs",
    "rootDir": ".",
    "declaration": true
  },
  "include": ["types/**/*", "utils/**/*", "models/**/*"],
  "exclude": ["node_modules", "dist"]
}
