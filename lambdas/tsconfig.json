{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["../layers/shared/nodejs/utils/*"],
      "@shared/*": ["../layers/shared/nodejs/types/*"],
      "@models/*": ["../layers/shared/nodejs/models/*"]
    }
  },
  "exclude": ["node_modules", "**/dist"]
}
